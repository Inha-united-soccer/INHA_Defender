<root BTCPP_format="4">
    <include path="./subtrees/cam_find_and_track_ball.xml" />
    <include path="./subtrees/locate.xml" />

    <BehaviorTree ID="MainTree">
        <Sequence name="root">
            <SubTree ID="CamFindAndTrackBall" _autoremap="true" />
            <SubTree ID="Locate" _autoremap="true" />
            
            <DribbleFigureEight 
                vx_limit="0.1" 
                vy_limit="0.2" 
                vtheta_limit="0.5" 
                dist_threshold="0.5" 
                min_speed="0.01" 
                max_speed="0.1" 
                circle_back_dist="0.7"
            />
            
            <CalcKickDir />
            <Wait msec="1000" />
            <Kick />
        </Sequence>
    </BehaviorTree>
</root>
